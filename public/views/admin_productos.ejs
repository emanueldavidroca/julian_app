<%- include("./partials/head.ejs") %> 
<body>
    <section id="admin" class="admin_usuarios">
        <div class="row gx-0">
            <%- include('./partials/admin_sidebar') %>
            <div class="col-9" id="contenido">
                <p class="title"><b>Checkout</b>Express </p>
                <p class="subtitle">Inventario | Gestión de Productos</p>
                <div class="row justify-content-center align-items-center" id="search_bar">
                  <div class="col-md-2">
                    <button class="btn btn-primary px-4"
                     onClick="document.querySelector('.expandible-sidebar-form').classList.add('activo');"><i class="fa-solid fa-plus"></i> Nuevo</button>
                  </div>
                    <div class="col-md-7 d-flex ">
                        <input type="text" class="form-control form-control-lg" placeholder="Buscar...">
                        <button class="search btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Producto</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">0001</th>
                        <td>Aceite</td>
                        <td>4</td>
                        <td>Bajo Stock <i class="fa-solid fa-triangle-exclamation text-danger"></i></td>
                        <td>
                            <button class="btn btn-success"><i class="fa-solid fa-pen"></i>Editar</button>
                            <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Borrar</button>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">0002</th>
                        <td>Pastas</td>
                        <td>102</td>
                        <td>Activo</td>
                        <td>
                            <button class="btn btn-success"><i class="fa-solid fa-pen"></i>Editar</button>
                            <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Borrar</button>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">0003</th>
                        <td>Decoración</td>
                        <td>86</td>
                        <td>Activo</td>
                        <td>
                            <button class="btn btn-success"><i class="fa-solid fa-pen"></i>Editar</button>
                            <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Borrar</button>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">0004</th>
                        <td>Accesorios</td>
                        <td>233</td>
                        <td>Bloqueado</td>
                        <td>
                            <button class="btn btn-success"><i class="fa-solid fa-pen"></i>Editar</button>
                            <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Borrar</button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
            </div>
        </div>
        <div class="expandible-sidebar-form">
          <form action="/admin/productos" method="post">
            <h3>Nuevo Producto</h3>
            <hr>
            <div class="row justify-content-between">
              <div class="col-md-5">

              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <label for="stock">Stock</label>
                  <input type="number" name="stock" id="stock" class="form-control">
                </div>
              </div>
            </div>
            
            <div class="form-group">
              <label for="productName">Nombre de producto</label>
              <input type="text" name="productName" id="productName" class="form-control">
            </div>
            <div class="form-group">
              <label for="description">Descripcion</label>
              <textarea name="description" id="description" class="form-control" rows="10"></textarea>
            </div>
            <div class="form-group">
              <label for="barCode">Codigo de barra</label>
              <input type="text" name="barCode" id="barCode" class="form-control">
            </div>
            <div class="form-group">
              <label for="category">Categoria</label>
              <select type="text" name="category" id="category" class="form-control">
              </select>
            </div>
            <div class="form-group">
              <label for="price">Precio</label>
            <input type="number" name="price" id="price" class="form-control">
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
            
          </form>
        </div>
    </section>
</body>
</html>